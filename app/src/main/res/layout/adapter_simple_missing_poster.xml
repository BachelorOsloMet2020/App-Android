<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".adapter.SimpleMissingPosterAdapter"
    android:minHeight="86dp"
    android:minWidth="325dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


<ImageView
    android:id="@+id/img_pet_simple"
    android:layout_width="64dp"
    android:layout_height="64dp"
    android:layout_marginStart="16dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:src="@drawable/ic_dlogo" />

<TextView
    android:id="@+id/txt_animal_name"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="16dp"
    android:textSize="20sp"
    app:layout_constraintBottom_toBottomOf="@+id/img_pet_simple"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/img_pet_simple"
    app:layout_constraintTop_toTopOf="@+id/img_pet_simple"
    tools:text="Bruno" />

</androidx.constraintlayout.widget.ConstraintLayout>